{
    "require": {
    	"php": "^8.2",
    	"ext-fileinfo": "*",
    	"ext-intl": "*",
    	"ext-json": "*",
    	"ext-mbstring": "*",
        "smarty/smarty": "^4.3",
        "firebase/php-jwt": "^6.5"
    },
    "autoload": {
        "psr-4": {
            "Libraries\\": "app/lib/",
            "Command\\": "command/",
            "Models\\": "models/",
            "Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^10.1",
        "squizlabs/php_codesniffer": "*",
        "phpstan/phpstan": "^1.10"
    },
    "scripts": {
    	"test": [
    		"vendor/bin/phpcs",
			"vendor/bin/phpstan",
			"vendor/bin/phpunit --colors=always"
    	]
    }
}
